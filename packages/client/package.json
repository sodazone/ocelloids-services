{
  "name": "@sodazone/ocelloids-client",
  "version": "2.1.1",
  "type": "module",
  "description": "Ocelloids client library",
  "author": "SO/DA <projects@soda.zone>",
  "contributors": [
    "Marc Forn√≥s <marc@soda.zone>",
    "Xueying Wang <xueying@soda.zone>"
  ],
  "repository": "https://github.com/sodazone/ocelloids-services",
  "source": "./src/lib.ts",
  "main": "./dist/lib.cjs",
  "module": "./dist/lib.js",
  "types": "./dist/ocelloids-client.d.ts",
  "files": [
    "/dist",
    "/src"
  ],
  "license": "Apache-2.0",
  "tsup": {
    "entry": [
      "src/lib.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "bundle": true,
    "sourcemap": true,
    "metafile": true,
    "clean": true
  },
  "scripts": {
    "build": "yarn build:ts && yarn build:api",
    "build:ts": "tsup",
    "build:api": "tsc  && api-extractor run --local --verbose",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest",
    "docs": "typedoc",
    "lint": "biome check --write src/**/*.ts"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      ".*/dist"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest"
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "packageManager": "yarn@4.1.0",
  "peerDependencies": {
    "ws": "*"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.2",
    "@microsoft/api-extractor": "^7.47.0",
    "@swc/core": "^1.6.3",
    "@swc/jest": "^0.2.36",
    "finalhandler": "^1.2.0",
    "jest": "^29.7.0",
    "mock-socket": "^9.3.1",
    "nock": "^14.0.0-beta.7",
    "tsup": "^8.1.0",
    "tsx": "^4.15.6",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "isows": "^1.0.4",
    "zod": "^3.23.8"
  }
}
