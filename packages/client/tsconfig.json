{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "target": "es6",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "baseUrl": "./src",
    "types": [
      "jest"
    ],
    "outDir": "./dist",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "test"
  ]
}