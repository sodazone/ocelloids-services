{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDir": "src",
    "types": ["vitest/globals"],
    "paths": {
      "@/*": ["*"]
    },
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "src/vitest.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}